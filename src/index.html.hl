<script type="text/hoplon">
  (page "index.html"
   (:require-macros
      [tailrecursion.hoplon   :refer [with-timeout with-init!]])
   (:require 
      [svg-example.app :as app]))
</script>
<!doctype html>
<html>
  <head>
    <html-meta charset="utf-8">
    <title>SVG Sample</title>
    
    <link href="//maxcdn.bootstrapcdn.com/bootswatch/3.3.2/spacelab/bootstrap.min.css" rel="stylesheet">
    
    <link rel="stylesheet" href="css/styles.css" />
  </head>
  <body>
    <div class="container">
      <div class="row">
        <header class="col-lg-12 text-center">
          <h2>SVG Sample</h2>
        </header>
      </div>
      <div class="row">
        <div id="instructions" class="col-lg-12 text-center">
          <div class="panel panel-default">
            <div class="panel-heading text-center"><h5>Instructions</h5></div>
            <div class="panel-body text-left">
              <ol> 
                <li>Click the circle to increase the 'Clicks' count.</li>
                <li>Drag the circle around.</li>
                <li>Change the circle's 'x', 'y', 'size', 'fill' with the range controls.</li>
                <li>When you're done, step/play forward/back through history!</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <div class="row">
        <div id="canvas" class="col-xs-12">
          <div class="col-md-3">
            <h2>Clicks <small text='{{ (cell= (:clicks app/circl)) }}'/></h2>
            <app.range-element id="x-axis" target='{{  app/circl }}' part='{{ :x }}' title="X-axis" min="0" max="720" />
            <app.range-element id="y-axis" target='{{ app/circl }}' part='{{ :y }}' title="Y-axis" min="0" max="400" />
            <app.range-element id="radius" target='{{ app/circl }}' part='{{ :radius }}' title="Radius" min="1" max="100" />
            <app.select-element id="fill" target='{{ app/circl }}' part='{{ :fill }}' title="Color" options='{{ app/colors }}'/>
            <app.history-element id="history" history='{{ app/history }}' ndx='{{ app/current }}' title="History" /> 
          </div>
          <div class="col-md-9">
            <app.container chart='{{ app/chart }}' css='{{ (cell= {:outline "2px solid black" :background-color "#fff" :position "absolute"}) }}'>
            <app.circle   circle='{{ app/circl }}' css='{{ (cell= {:position "relative"}) }}' click='{{ #(swap! app/circl assoc :clicks (inc (:clicks @app/circl))) }}'/>
            </app.container>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
